@model SocialTrainingWebApp.Models.ExternalLoginListViewModel
@using Microsoft.Owin.Security


@{
    var loginProviders = Context.GetOwinContext().Authentication.GetExternalAuthenticationTypes().ToList();

    using (Html.BeginForm("ExternalLogin", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()

        {
            AuthenticationDescription p = loginProviders[0];
            <div class="col-xs-9 col-xs-offset-1-5 col-sm-7 col-sm-offset-2-5 col-lg-9 col-lg-offset-1-5">
                <button type="submit" id="Google" name="provider" value="@p.AuthenticationType" title="Log in using your @p.Caption account" class="btn-block bttn-jelly bttn-sm bttn-primary login-btn">
                    <span aria-hidden="true" class="vismaicon vismaicon-google"></span>
                    @p.AuthenticationType
                </button>
            </div>
        }

    }
}
