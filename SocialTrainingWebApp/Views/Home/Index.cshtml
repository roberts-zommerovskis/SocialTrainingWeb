@{
    ViewBag.Title = "Home Page";
}

@model List<SocialTrainingWebApp.Models.Employee>


<div class="container">
    <div class="row vertical-center-row">
        <div class="col-lg-12">
            <div class="row" style="display:flex; justify-content:center">
                <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-6 col-xs-offset-3">
                    <iframe src="~/placeholder.png" title="colleaguePortrait" scrolling="no"></iframe>
                    @{int i = 1; }
                    @foreach (var item in Model)
                    {
                        string val = "value";
                        <button class="btn btn-default" value="@val@i" id="@i" onclick="location.href='@Url.Action("UserChoice", "Home")?buttonId=' + $('#'+@i).val()">@item.FullName</button>
                        i++;
                    }
                </div>
            </div>
        </div>
    </div>
</div>







