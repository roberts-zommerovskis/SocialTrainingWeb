@using System.Linq;
@{
    ViewBag.Title = "Home Page";
}

@model SocialTrainingWebApp.Models.ChosenEmployees

<div class="col-xs-7 col-xs-offset-2-5">
    <div class="panel panel-default">
        <div class="panel-body" style="padding: 0 0 0 0">
            <div style="height:auto;overflow:hidden">
                <div class="col-xs-6" style="padding-right:0; float:right;transform: translateY(40%)">
                    <form id="guessingForm" action="">
                        @{int i = 0; }
                        @foreach (var item in Model._employeeTriad)
                        {
                            <div class="radio">
                                <label>
                                    <input type="radio" name="optionsRadios" id="@i">@item.FullName
                                </label>
                            </div>
                            i++;
                        }

                    </form>
                    <div class="col-xs-11 col-sm-11 col-md-8 col-lg-6-5" style="padding-left:0; padding-right:0">
                        <button id="optionButton" class="btn-block disabled margin-top bttn-jelly bttn-sm bttn-primary">Choose this option</button>
                    </div>
                </div>
                <div style="float:none;width:auto;overflow:hidden">
                    @{
                        <a><img src="~/MockImages/@Model._chosenEmployeeImageId" style="border:none" /></a>
                    }

                </div>

            </div>
        </div>
    </div>
</div>


@Scripts.Render("~/bundles/checkAnswers")
<script type="text/javascript">
        function redirect() {
            window.location.href = '@Url.Action("Index", "Home")';
        }
</script>