@using System.Linq;
@{
    ViewBag.Title = "Home Page";
}

@model SocialTrainingWebApp.Models.ChosenEmployees



<div class="container">
    <div class="row vertical-center-row">
        <div class="col-lg-12">
            <div class="row ">
                <div class="col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-8 col-xs-offset-2">
                    <div class="col-xs-6">
                        @{
                            string chosenEmployeeImageId = Model.ChooseIframeImage();
                            <iframe src="~/MockImages/@chosenEmployeeImageId" title="colleaguePortrait" scrolling="no"></iframe>
                        }
                    </div>
                    <div class="col-xs-5">
                        @{int i = 1; }
                        @foreach (var item in Model._employeeTriad)
                        {
                            string result = Model.GetOtherOptionEmployeeIDs(item.ImportId, Model._employeeTriad, chosenEmployeeImageId);
                            <div class="row">
                                <button class="btn btn-default" value="@item.ImportId" id="@i" onclick="location.href='@Url.Action("Index", "Home")?buttonId=' +'@result'">@item.FullName</button>
                            </div>
                            i++;
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="application/javascript">

    function resizeIFrameToFitContent( iFrame ) {

                            iFrame.width  = iFrame.contentWindow.document.body.scrollWidth;
                            iFrame.height = iFrame.contentWindow.document.body.scrollHeight;
                        }

                        window.addEventListener('DOMContentLoaded', function(e) {
                            var iframes = document.querySelectorAll("iframe");
                            for( var i = 0; i < iframes.length; i++) {
                                resizeIFrameToFitContent( iframes[i] );
                            }
                        } );

</script>







