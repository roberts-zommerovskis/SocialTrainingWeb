
@{
    ViewBag.Title = "Congratulations";
}
@model SocialTrainingWebApp.Models.SessionSummaryModel


<div class="col-md-5 col-md-offset-3-5 col-sm-5 col-sm-offset-3-5 col-xs-5 col-xs-offset-3-5">
    <div class="panel panel-default">
        <div class="panel-body" style="text-align:center">
            <div><h1>Well done!</h1></div>
            <div><h2 style="border-bottom:none">You know your colleagues for</h2></div>
            <div class="padding-bottom"><text style="font-size:xx-large; color:#0089d9">@Model._percentageString</text></div>
            <div class="col-xs-6 col-xs-offset-2-5">
                <div class="progress progress-xs">
                    <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="0"
                         aria-valuemin="0" aria-valuemax="100" style="width:@Model._percentageString">
                        >
                    </div>
                </div>
            </div>
            <button type="button" id="playAgainButton" class="btn btn-primary btn-lg" onclick="location.href='@Url.Action("Index", "Home")'">Repeat</button>
        </div>
        <div class="padding-bottom" style="text-align:center">
            <text>Sign out</text>
        </div>
    </div>
</div>

<script type="text/javascript">
    $("#playAgainButton").click(function () {
        document.body.innerHTML += '<div style="background-color: rgba(1, 1, 1, 0.01);bottom: 0;left: 0;position: fixed;right: 0;top: 0;"></div>';
        $.ajax({
            url: "/Home/PlayAgain/",
            data: { PlayAgain: true },
            cache: false,
            type: "GET",
            timeout: 10000,
            dataType: "json",
            success: function (resp) {
                //request sent and response received.
            }
        });
    }
    )
</script>